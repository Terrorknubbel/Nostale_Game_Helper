<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="assets/main.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <title>NosBasar Calc</title>
</head>
<body>

    <!-- <h1>
        NosBasar Rechner
    </h1> -->
    <header>
        <img id="banner" src="assets/img/banner.png" alt="">
        <img id="logo" src="assets/img/logo.png" alt="">
        <h2 id="heading">Taler Trader</h2>
    </header>

    <form action="">
        <input id="Talerpreis" type="text" placeholder="Talerpreis">
        <input id="Update" type="submit" value="Update">
    </form>
 
    <form action="updatedb" id="updatedb">

    <table class="display" id="maintable">
        <thead>
            <tr>
                <th style="display:none"></th>
                <th>
                    Name
                </th>
                <th>
                    Taler
                </th>
                <th>
                    Talerwert
                </th>
                <th>
                    Basarwert
                </th>
                <th>
                    Kaufen
                </th>
                <th>
                    Differenz
                </th>
                <th>
                    DiffPercent
                </th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < items.length; i++){ %>
                <tr>
                    <td style="display:none" class="id">
                        <%= items[i].id %>
                    </td>
                    <td>
                        <%= items[i].Name %>
                    </td>
                    <td class="Taler">
                        <%= items[i].Taler %>
                    </td>
                    <td class="Talerwert">
                        <%= items[i].Talerwert %>
                    </td>
                    <td class="Basarwert">
                        <input type="text" value='<%= items[i].Basarwert %>'>
                    </td>
                    <td class="Kaufen">
    
                    </td>
                    <td class="Diff">
    
                    </td>
                    <td class="DiffPercent">

                    </td>
                </tr>
                <% } %>
        </tbody>
       
    </table>
    <input type="submit" value="Update DB">
    </form>
    <br><br>
    <form action="create" id="create">
        <table>
            <tr>
                <td><input type="text" name="Name" placeholder="Name" required></td>
                <td><input type="text" name="Taler" placeholder="Taler" required></td>
            </tr>
            <tr>
                <td><input type="text" name="Basarwert" placeholder="Basarwert"></td>
                <td><input type="submit"></td>
            </tr>
        </table>
    </form>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="assets/calc.js"></script>
</body>
</html>